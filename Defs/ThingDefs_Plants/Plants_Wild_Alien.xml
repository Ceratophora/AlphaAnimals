<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<ThingDef ParentName="PlantBase">
		<defName>GU_AlienGrass</defName>
		<label>alien grass</label>
		<description>This grass is completely alien, probably not even 100% carbon based, and it seems to be decaying quickly by being exposed to a terrestrial environment.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Flammability>1.3</Flammability>
			<Nutrition>0.05</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/GU_AlienGrass</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible />
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>1</growDays>
			<harvestWork>40</harvestWork>
			<maxMeshCount>9</maxMeshCount>
			<visualSizeRange>
				<min>0.4</min>
				<max>0.6</max>
			</visualSizeRange>
			<topWindExposure>0.4</topWindExposure>
			<wildOrder>1</wildOrder>
			<lifespanDaysPerGrowDays>1</lifespanDaysPerGrowDays>

		</plant>
	</ThingDef>
	
