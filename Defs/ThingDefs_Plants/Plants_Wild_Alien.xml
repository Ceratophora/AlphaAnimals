	<!--============================ Trees ============================-->

  <ThingDef ParentName="PlantBase">
    <defName>GU_AlienTree</defName>
    <label>alien tree</label>
<description>This tree is completely alien, probably not even 100% carbon based, and it seems to be decaying quickly by being exposed to a terrestrial environment. Strange fruits resembling eyeballs hang from the tree, but they are probably not edible. Its wood releases a powerful, sweet scent. Perhaps it can be somehow useful?</description>    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
	   <Flammability>0.8</Flammability>
      <Nutrition>0.1</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/GU_AlienTree</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.24, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <selectable>true</selectable>
    <fillPercent>0.35</fillPercent>
    <passability>PassThroughOnly</passability>
    <pathCost>130</pathCost>
    <blockWind>true</blockWind>
    <ingestible>
      <foodType>Tree</foodType>
      <preferability>RawBad</preferability>
      
    </ingestible>
    <plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>1</growDays>
			
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<harvestWork>300</harvestWork>
			<harvestedThingDef>GU_RedWood</harvestedThingDef>
			<harvestTag>Wood</harvestTag>
			<harvestYield>10</harvestYield>
			<harvestMinGrowth>0.2</harvestMinGrowth>
			<harvestFailable>false</harvestFailable>
			<visualSizeRange>
				<min>2.3</min>
				<max>3.0</max>
			</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
						<lifespanDaysPerGrowDays>1</lifespanDaysPerGrowDays>

		</plant>
  </ThingDef>
  
  	<ThingDef ParentName="PlantBase">
		<defName>AA_RottingMound</defName>
		<label>fermented rotting mound</label>
		<description>This is a clump of rotting organic matter. It has begun fermenting and reeks of rot and alcohol.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Flammability>1.3</Flammability>
			<Nutrition>0.05</Nutrition>
		</statBases>
		<drawerType>MapMeshOnly</drawerType>
		<graphicData>
			<texPath>Things/Plants/AA_RottingMound</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		
		<ingestible> 
		<foodType>Liquor</foodType>
		<preferability>RawBad</preferability>
		<outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>AlcoholHigh</hediffDef>
          <severity>0.15</severity>
          <toleranceChemical>Alcohol</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>AlcoholTolerance</hediffDef>
          <severity>0.016</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
      </outcomeDoers>
		</ingestible> 

		<plant>
			<fertilityMin>0</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>0.001</growDays>
			<harvestWork>40</harvestWork>
			<maxMeshCount>1</maxMeshCount>
			<visualSizeRange>
				<min>0.8</min>
				<max>1</max>
			</visualSizeRange>
			<topWindExposure>0.05</topWindExposure>
			<wildOrder>1</wildOrder>
			<lifespanDaysPerGrowDays>10</lifespanDaysPerGrowDays>

		</plant>
	</ThingDef>

	

</Defs>
